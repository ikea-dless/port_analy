.ui.middle.aligned.center.aligned.grid
  .column
    %h2.ui.teal.image.header Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui form'}) do |f|
      = devise_error_messages!
      .field
        .ui.left.icon.input
          %i.user.icon
          = f.email_field :email, autofocus: true, placeholder: 'メールアドレス'
      .field
        .ui.left.icon.input
          %i.lock.icon
          = f.password_field :password, autocomplete: "off", placeholder: 'パスワード(8文字以上)'
      .field
        .ui.left.icon.input
          %i.lock.icon
          = f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードをもう一度入力してください'
      = f.submit '新規登録', class: 'ui fluid large blue submit button'
    .ui.message
      = render "users/shared/links"
